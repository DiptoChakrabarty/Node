<%- include('partials/header')  %>
<div class="container">
<header class="jumbotron">
        <div class="container">
    <h1>Welcome to games Store </h1>
    <h3>Checkout Best Games from around the word</h3>
    <p>
        <a class = "btn btn-warning btn-large" href="/new">Add New games</a>
    </p>
</div>
</header>

<div class="row">
    <div class="vol-lg-12">
        <h3>Our most popular games </h3>
         
    </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% games.forEach(function(game){  %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
            
            <img src= "<%= game.url %>" >
            <div class="caption">
            <h3><%= game.name %></h3>
        </div>
        </div>
    </div>
 <% })  %>
 </div>
</div>

<%- include('partials/footer')  %>